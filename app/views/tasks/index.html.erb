<h1>Your tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <span>
        <% if task.completed == true %>
           ✅
        <% else %>
           ❌
        <% end %>
      </span>
      <%= link_to task.title, task_path(task)  %>
      <%= link_to '🗑', tasks_destroy_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>


<%= link_to "Go home", home_path  %>
<%= link_to "Add a task", tasks_new_path  %>

